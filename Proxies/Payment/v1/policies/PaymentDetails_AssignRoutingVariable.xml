<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="PaymentDetails_AssignRoutingVariable">
    <!-- Target Service name -->
    <AssignVariable>
        <Name>target.route.service</Name>
        <Value>Payment</Value>
    </AssignVariable>
    <!-- Target  Action name -->
    <AssignVariable>
        <Name>target.route.operation</Name>
        <Value>PaymentDetails</Value>
    </AssignVariable>
    <!-- Proxy Log Aggregator -->
    <AssignVariable>
        <Name>log.apiName</Name>
        <Value>PaymentDetails</Value>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="request"/>
</AssignMessage>
